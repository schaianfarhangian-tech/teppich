generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Rug {
  id         Int      @id @default(autoincrement())
  rugNumber  String   @unique
  name       String?
  widthCm    Int
  lengthCm   Int
  color      String?
  priceCents Int
  imagePath  String?
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
